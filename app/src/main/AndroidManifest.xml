<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="manschwa.shootinglog" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_sl"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".discipline.DisciplineListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".discipline.DisciplineEditActivity"
            android:label="@string/newDiscipline"
            android:parentActivityName=".discipline.DisciplineListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".discipline.DisciplineListActivity"/>
        </activity>

        <activity
            android:name=".event.EventListActivity"
            android:label="@string/Events">
        </activity>
        <activity
            android:name=".event.EventEditActivity"
            android:label="@string/newEvent"
            android:parentActivityName=".event.EventListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".event.EventEditActivity"/>
        </activity>

        <activity
            android:name=".location.LocationListActivity"
            android:label="@string/Events">
        </activity>
        <activity
            android:name=".location.LocationEditActivity"
            android:label="@string/newLocation"
            android:parentActivityName=".location.LocationListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".location.LocationEditActivity"/>
        </activity>

        <activity
            android:name=".manufacturer.ManufacturerListActivity"
            android:label="@string/manufacturers">
        </activity>
        <activity
            android:name=".manufacturer.ManufacturerEditActivity"
            android:label="@string/newManufacturer"
            android:parentActivityName=".manufacturer.ManufacturerListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".manufacturer.ManufacturerEditActivity"/>
        </activity>
    </application>

</manifest>
